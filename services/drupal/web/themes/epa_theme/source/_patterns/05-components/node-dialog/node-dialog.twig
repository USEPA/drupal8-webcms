{% set classes = [
  'node-dialog',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

<ul class="{{ classes }}" role="dialog">
	{% for item in nodeDialog %}
		<li class="node-dialog__item">
			{% if not item.content %}
				<a 
					class="node-dialog__link {% if item.is_active %}is-active{% endif %}"
					{% if item.url %} 
			          href="{{ item.url }}" 
			        {% else %}
			          role="link"
			          aria-disabled="true"
			        {% endif %}  
				>
					{{ item.title }}
				</a>
			{% else %}
				<div class="node-dialog__content">
					{{ item.content }}
				</div>	
			{% endif %}	
		</li>
	{% endfor %}
</ul>
