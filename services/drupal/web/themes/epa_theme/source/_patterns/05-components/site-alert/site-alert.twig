{{ attach_library('epa_theme/site_alert') }}

{% set classes = [
  'usa-site-alert',
  'usa-site-alert--slim',
  modifier_classes ? modifier_classes,
  show_close ? 'js-sitewide-alert',
  show_close ? 'u-hidden',
]|join(' ')|trim %}

<div class="{{ classes }}"{% if hash %} data-alert="{{ hash }}"{% endif %}>
  <div class="usa-alert">
    <div class="usa-alert__body">
      {%- if label -%}
        <div class="u-visually-hidden">{{ label }}</div>
      {%- endif -%}

      <div class="usa-alert__text">
        {{ content }}
      </div>
      {% if show_close %}
        <button class="usa-alert__close js-sitewide-alert__close">
          {{ 'Close'|t }}
          {% include '@components/icon/icon.twig' with {
            'modifier_classes': 'icon--sitewide-alert-close is-spaced-before',
            'is_hidden': true,
            'icon_name': 'close'
          } %}
        </button>
      {% endif %}
    </div>
  </div>
</div>
