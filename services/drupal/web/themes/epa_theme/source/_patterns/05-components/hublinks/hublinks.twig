{{ attach_library('epa_theme/hublinks') }}

{% set classes = [
  'hublinks',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

<div class="{{ classes }}">
  {% if title %}
    <strong class="hublinks__title">{{ title }}:</strong>
  {% endif %}
  <ul class="hublinks__list">
    {% for link in links -%}
      <li class="hublinks__list-item">
        {%- if link.url and link.text -%}
          <a href="{{ link.url }}">{{ link.text }}</a>
        {%- else -%}
          {{ link }}
        {%- endif -%}
      </li>
    {%- endfor %}
  </ul>
</div>
