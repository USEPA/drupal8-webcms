{% embed '@layouts/detail-header/detail-header.twig' %}
  {% block info %}
    {{ header_info }}
  {% endblock %}

  {% block contact %}
    {{ contact_link }}
  {% endblock %}
{% endembed %}

{% embed '@layouts/sidebar/sidebar.twig' with {
  'has_sidebar': has_sidenav,
  'modifier_classes': 'l-sidebar--reversed',
} %}
  {% block main_content %}
    {% embed '@components/article/article.twig' with {
      'title': title,
      'intro': intro,
      'content': body,
      'sidebar': sidebar,
    } %}

      {% block messages %}
        {{ messages }}
      {% endblock %}

      {% block local_tasks %}
        {{ tasks }}
      {% endblock %}
    {% endembed %}
  {% endblock %}

  {% block sidebar %}
    {% include '@uswds/sidenav/sidenav.twig' %}
  {% endblock %}
{% endembed %}

{% embed '@layouts/detail-footer/detail-footer.twig' %}
  {% block content %}
    {{ footer }}
  {% endblock %}
{% endembed %}
