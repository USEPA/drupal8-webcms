{% if media_accessibility == 'private' %}
  {% set is_private = true %}
{% endif %}

{% include '@components/document/document.twig' with {
  'file': content.field_media_file,
  'filesize': filesize,
  'date': content.field_publication_date|field_value ? content.field_publication_date|field_value : false,
  'publication_number': content.field_publication_number|field_value ? content.field_publication_number|field_value : false,
  'description': content.field_description|field_value,
  'is_private': is_private,
  'contextual': title_suffix.contextual_links,
} %}
