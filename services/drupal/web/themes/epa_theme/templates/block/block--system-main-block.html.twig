{#
 /**
  * @file
  * Theme override for a main block.
  */
#}
{% set hide_wrapper = true %}

{% if logged_in %}
  {% set hide_wrapper = false %}
{% endif %}

{% set classes = [
  'block',
  'block--provider-' ~ configuration.provider|clean_class,
  'block--id-' ~ plugin_id|clean_class,
] %}

{% set attributes = attributes.addClass(classes) %}

{% embed '@components/block/block.twig' with {
  'hide_wrapper': hide_wrapper,
  'has_constrain': false,
  'hide_content_wrapper': true,
  'label': false
} %}

  {% block content %}
    {{ content }}
  {% endblock %}

{% endembed %}
