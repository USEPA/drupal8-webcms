{% if node.field_language.value %}
  {% set attributes = attributes.setAttribute('lang', node.field_language.value) %}
  {% if node.field_language.value == 'ar' %}
    {% set attributes = attributes.setAttribute('dir', 'rtl') %}
  {% endif %}
{% endif %}

