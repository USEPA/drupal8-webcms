{#
/**
 * @file
 * Theme override for a main view template.
 */
#}

{% set header_info %}
  {% include '@components/web-area-title/web-area-title.twig' with {
    'text': 'Public Notices'|t,
  } %}
{% endset %}

{% set admin_info %}
  {{ drupal_block('system_messages_block', wrapper=false) }}
  {{ drupal_block('local_tasks_block', wrapper=false) }}
  {{ drupal_block('local_actions_block', wrapper=false) }}
{% endset %}

{% set show_admin_info = false %}

{% if admin_info|striptags('<drupal-render-placeholder>')|trim %}
  {% set show_admin_info = true %}
{% endif %}

{% set area_footer %}
  {{ drupal_entity('block', 'webareafooter', check_access=false) }}
{% endset %}

{% set intro %}
  {{ drupal_entity('block', 'public_notices_intro_text', check_access=false) }}
{% endset %}

{% set search %}
  {{ drupal_entity('block', 'exposedformsearch_public_noticespage_1', check_access=false) }}
{% endset %}

{% set sidebar %}
  {%- set accordion_content -%}
    {{ drupal_entity('block', 'public_notices_location_of_prop_action', check_access=false) }}
    {{ drupal_entity('block', 'public_notices_program_or_statute', check_access=false) }}
    {{ drupal_entity('block', 'public_notices_proposed_actions', check_access=false) }}
    {{ drupal_entity('block', 'public_notices_computed_comments_due_date', check_access=false) }}
  {%- endset -%}

  <h2 class="h3">{{ 'Filter By:'|t }}</h2>
  {% include '@uswds/accordion/accordion.twig' with {
    'modifier_classes': 'usa-accordion--bordered margin-bottom-4',
    'is_multi_selectable': true,
    'accordion_id': 'facets',
    'accordion_content': accordion_content,
  } %}
{% endset %}

{% set filters %}
  {{ drupal_entity('block', 'public_notices_current_search_results', check_access=false) }}
  <h2 class="h5 margin-bottom-5">{{ header }}</h2>
{% endset %}

{% set body %}
  {{ exposed }}
  {{ rows }}
  {{ empty }}
  {{ pager }}
  {{ footer }}
  {{ feed_icons }}
{% endset %}

{% include '@templates/listing-pages/listing-page.twig' with {
  'has_header': true,
  'has_sidenav': true,
  'header_info': header_info,
  'title': view.title,
  'contextual_links': title_suffix.contextual_links,
  'admin_info': admin_info,
  'show_admin_info': show_admin_info,
  'intro': intro,
  'search': search,
  'filters': filters,
  'body': body,
  'sidebar': sidebar,
  'footer': area_footer,
} %}
