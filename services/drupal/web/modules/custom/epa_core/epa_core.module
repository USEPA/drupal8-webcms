/**
 * Implements hook_rebuild()
 */
function epa_core_rebuild() {
  // Ensure some default blocks are created
  $block_content = [
    'f76834c2-f52a-4081-bac9-3a97a3ac68e6' => [
      'type' => 'custom_html',
      'info' => 'Web Area Header',
      'fields' => ['body' => ['value' => '[current-page:contact-us-link]', 'format' => 'filtered_html']],
    ],
    '46bbc4b7-ffa1-4db8-8209-64c37fa0fcd7' => [
      'type' => 'custom_html',
      'info' => 'Web Area Footer',
      'fields' => ['body' => ['value' => '[current-page:contact-us-link] to ask a question, provide feedback, or report a problem.', 'format' => 'filtered_html']],
    ]
  ];

  foreach ($block_content as $uuid => $info) {
    if ((!$block_content = \Drupal::service('entity.repository')->loadEntityByUuid('block_content', $uuid))) {
      $block_content = BlockContent::create([
        'type' => $info['type'],
        'info' => $info['info'],
        'uuid' => $uuid,
      ]);
      foreach ($info['fields'] as $field => $field_data) {
        $block_content->$field->setValue($field_data);
      }
      $block_content->save();
    }
  }
}
